p_r = True
while True:
    miles_driven = float(input("Miles Driven:\t"))
    gallons_used = float(input("Gallons Used:\t"))
    def calc_mpg(miles_driven, gallons_used):
        mpg = miles_driven/gallons_used
        return mpg
    calculated_mpg = calc_mpg(miles_driven, gallons_used)
    print(float(calculated_mpg))
    if input("\nContinue? (y/n): ").lower() != "y":
        print("\nBye!")
        break
    
